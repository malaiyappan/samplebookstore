<%- model_class = DailyBackup -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:server_ip) %>:</strong></dt>
  <dd><%= @daily_backup.server_ip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bucket_name) %>:</strong></dt>
  <dd><%= @daily_backup.bucket_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dbbackup) %>:</strong></dt>
  <dd><%= @daily_backup.dbbackup %></dd>
  <dt><strong><%= model_class.human_attribute_name(:filesbackup) %>:</strong></dt>
  <dd><%= @daily_backup.filesbackup %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @daily_backup.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:domain_id) %>:</strong></dt>
  <dd><%= @daily_backup.domain_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              daily_backups_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_daily_backup_path(@daily_backup), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              daily_backup_path(@daily_backup),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
